---
import Container from "@components/container.astro";
import { Image } from 'astro:assets';
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import myImage from "assets/LogosoftA0_H100.png"; // Image is 1600x900


const menuitems = [
  {
    title: "Cas d'usage",
    path: "/cas-usage",
    children: [
      { title: "Marketing", path: "/cas-usage" },
      { title: "RH", path: "/cas-usage" },
      { title: "Produit", path: "/cas-usage" },
      { title: "Succès client", path: "/cas-usage" },
      { title: "Créateur", path: "/cas-usage" },
      { title: "Business", path: "/cas-usage" },

    ],
  },
  {
    title: "Tarifs",
    path: "/pricing",
  },
  
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
 
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg" >
         <Image src={myImage} alt="logo "  width="120" height="120"/>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <!--<Link href="#" style="muted" block size="md">Se connecter</Link> -->
          <Link href="https://ethnos-ai.com/app/" size="md" block>Se connecter</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <!-- <a href="#">Se connecter</a> -->
        <Link href="https://ethnos-ai.com/app/" size="md">Se connecter</Link>
      </div>
    </div>
  </header>
</Container>
